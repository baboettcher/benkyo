{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/src/**",
      "**/node_modules/**",
      "**/.git/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
